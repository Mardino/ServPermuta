{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/src/*"],
      "@server/*": ["./server/*"],
      "@shared/*": ["./shared/*"]
    },
    "types": ["vite/client", "node"],
    "typeRoots": ["./node_modules/@types", "./shared/types"],
    "outDir": "dist"
  },
  "include": [
    "client/src/**/*", 
    "server/**/*", 
    "shared/**/*",
    "vite.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
